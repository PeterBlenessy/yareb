{
  "name": "yareb",
  "description": "Yet Another React Electron Boilerplate",
  "version": "0.10.3",
  "author": "Peter Blenessy",
  "private": true,
  "dependencies": {
    "@blueprintjs/core": "^3.26.1",
    "@testing-library/jest-dom": "latest",
    "@testing-library/react": "latest",
    "@testing-library/user-event": "latest",
    "electron-updater": "^4.3.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "nucleus-nodejs": "^3.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "react-test-renderer": "^16.13.1",
    "typescript": "^3.9.2",
    "yargs-parser": "^18.1.3"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "serve": "react-scripts start",
    "start": "electron .",
    "build": "react-scripts build",
    "build:macos": "electron-builder --macos --dir",
    "dist:macos": "electron-builder --macos",
    "publish:github": "electron-builder --macos -p always",
    "test": "react-scripts test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^8.3.0",
    "electron-builder": "^22.6.1",
    "electron-builder-notarize": "^1.1.2",
    "electron-notarize": "^0.3.0"
  },
  "build": {
    "productName": "yareb",
    "appId": "com.electron.boilerplates.yareb",
    "mac": {
      "artifactName": "${productName}-${version}-osx.${ext}",
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "entitlements": "./node_modules/electron-builder-notarize/entitlements.mac.inherit.plist",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "afterSign": "electron-builder-notarize",
    "publish": {
      "provider": "github",
      "owner": "PeterBlenessy",
      "repo": "yareb"
    }
  }
}
